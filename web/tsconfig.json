{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "composite": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./packages/shared/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
